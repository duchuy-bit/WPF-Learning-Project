<Window x:Class="Learing.View.Binding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Learing.View"
        mc:Ignorable="d"
        Title="Binding" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center" >
        <TextBox x:Name="tbx1"  Text="{Binding ButtonName}" ></TextBox>
        <TextBox x:Name="tbx2" 
                 Text="{Binding Path=Text.Length, ElementName=tbx1, Mode=OneWay}">
            
        </TextBox>

        <Button Content="{Binding ButtonName}"></Button>

    </StackPanel>
</Window>
